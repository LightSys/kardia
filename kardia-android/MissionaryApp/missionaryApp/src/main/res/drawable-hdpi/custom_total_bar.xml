<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape  android:shape="rectangle" >
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#6B8CA6"/>
            <gradient android:angle="-90" android:startColor="#6B8CA6" android:endColor="#08051F"/>
        </shape>
    </item>
    <item >
        <shape  android:shape="rectangle" >
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#6B8CA6"/>
            <gradient android:angle="-90" android:startColor="#261979" android:endColor="#08051F"/>
        </shape>
    </item>

</selector>
