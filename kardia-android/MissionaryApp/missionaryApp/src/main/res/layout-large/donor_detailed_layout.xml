<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/donorInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >
        <ImageView
            android:contentDescription="@string/profile_pic_description"
            android:id="@+id/profilePicImage"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/prayer_letter_icon"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_toRightOf="@id/profilePicImage"
            android:layout_toEndOf="@id/profilePicImage"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/phoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp"
            android:textSize="18sp"
            android:layout_alignTop="@id/profilePicImage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp"
            android:layout_below="@+id/phoneText"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <View
        android:id="@+id/donorInfoDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000030"
        android:layout_below="@id/donorInfoLayout" />

    <ListView
        android:id="@+id/infoList"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        style="@style/listCustomBlue"
        android:layout_below="@id/donorInfoDivider"/>


</RelativeLayout>