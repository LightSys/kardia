<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context= "org.lightsys.missionaryapp.views.MainActivity">

    <!-- Display List -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/noise_blue_repeat">

        <TextView
            android:id="@+id/welcomeHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000030"
            android:layout_above="@+id/welcomeList" />


        <ListView
            android:id="@+id/welcomeList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            style="@style/homeNavigationItems"/>
            <!--style="@style/listCustomBlue"-->


    </RelativeLayout>

</RelativeLayout>

