<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profilePicImage"
        android:contentDescription="@string/profile_pic_description"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/profile_picture_standard"/>

    <TextView
        android:id="@+id/userNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:maxLines="2"
        android:layout_toRightOf="@id/profilePicImage"
        android:layout_toEndOf="@id/profilePicImage"
        android:layout_centerVertical="true"
        android:textSize="@dimen/user_name_header_dimen_lg"/>

    <TextView
        android:id="@+id/phoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        android:maxLines="1"
        android:layout_alignTop="@id/profilePicImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/border_dimen_lg"
        android:layout_marginEnd="@dimen/border_dimen_lg"
        android:textSize="@dimen/contact_dimen_lg"
        tools:ignore="RelativeOverlap"/>

    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:maxLines="2"
        android:layout_alignBottom="@id/profilePicImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/border_dimen_lg"
        android:layout_marginEnd="@dimen/border_dimen_lg"
        android:textSize="@dimen/contact_dimen_lg"
        tools:ignore="RelativeOverlap"/>
</RelativeLayout>