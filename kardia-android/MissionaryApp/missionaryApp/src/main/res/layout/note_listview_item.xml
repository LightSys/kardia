<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/missionaryNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="400dp"
        android:maxLines="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/border_dimen"
        android:layout_marginLeft="@dimen/border_dimen"
        android:layout_marginRight="@dimen/border_dimen"
        android:textSize="@dimen/header_dimen"/>

    <TextView
        android:id="@+id/subjectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/missionaryNameText"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:maxLines="1"
        android:textSize="@dimen/body_dimen" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/prayingButtonLayout"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:maxLines="1"
        android:textSize="@dimen/contact_dimen" />

    <LinearLayout
        android:id="@+id/prayingButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="8dp"
        tools:ignore="RelativeOverlap">

        <TextView
            android:id="@+id/textAbovePrayingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/contact_dimen"
            android:textStyle="bold" />

        <Button
            android:id="@+id/prayingButton"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:clickable="false"
            android:focusable = "false"/>

        <TextView
            android:id="@+id/textBelowPrayingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/contact_dimen"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
