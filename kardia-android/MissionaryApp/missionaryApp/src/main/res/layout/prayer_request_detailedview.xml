<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailed_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/noise_blue_repeat">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/missionaryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="18dp"
                android:textSize="24sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/missionaryName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:textSize="24sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:textSize="22sp" />

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:layout_below="@+id/date"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="34dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="14dp">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:paddingBottom="30dp" />
            </ScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prayingButtonlayout"
                android:layout_below="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation= "vertical"
                android:layout_margin ="6dp">
                <TextView
                    android:id="@+id/textAbovePrayingButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/scheduleNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:focusable = "false"/>

                <TextView
                    android:id="@+id/textBelowPrayingButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/praying"
                    android:textSize="16sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/supporterlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize = "16sp"
                android:visibility="invisible"
                android:layout_marginBottom="17dp"
                android:layout_alignBottom="@id/prayingButtonlayout"
                android:layout_toEndOf="@+id/prayingButtonlayout"
                android:layout_toRightOf="@+id/prayingButtonlayout"
                />

            <Button
                android:id="@+id/commentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/comment"
                android:layout_below="@id/prayingButtonlayout"
                style="@style/customBottomBar" />

            <org.lightsys.missionaryapp.tools.NonScrollListView
                android:id="@+id/commentsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:paddingTop="10dp"
                android:layout_below="@id/commentButton" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>