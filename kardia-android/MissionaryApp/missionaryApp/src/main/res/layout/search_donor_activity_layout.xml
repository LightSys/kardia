<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/noise_blue_repeat" xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- *********** Amount *********** -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/selectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/border_dimen"
                android:text="@string/by_name"
                android:textSize="@dimen/header_dimen" />

            <LinearLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/selectName"
                android:gravity="center_horizontal"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/nameType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:enabled="true"
                    android:entries="@array/search_name_options"
                    android:textSize="@dimen/body_dimen"/>

                <EditText
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/border_dimen"
                    android:layout_marginStart="@dimen/border_dimen"
                    android:layout_marginRight="@dimen/border_dimen"
                    android:layout_marginEnd="@dimen/border_dimen"
                    android:ems="5"
                    android:enabled="true"
                    android:text="@string/enter_name"
                    android:textSize="@dimen/body_dimen"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/border_dimen"
            android:background="#000030"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center" >

            <Button
                android:id="@+id/clearBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/border_dimen"
                android:text="@string/clear_search"
                android:textSize="@dimen/large_header_dimen"
                android:textStyle="bold"
                style="@style/customBottomBar" />

            <Button
                android:id="@+id/searchBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/border_dimen"
                android:text="@string/search"
                android:textSize="@dimen/large_header_dimen"
                android:textStyle="bold"
                style="@style/customBottomBar" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
