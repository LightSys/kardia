<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/donor_detailed"
    android:background="@drawable/noise_blue_repeat" >



        <!-- The Title -->
        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:textSize="22sp"
            android:layout_toLeftOf="@+id/detail"
            android:layout_toStartOf="@+id/detail"
            android:background="@color/spinner_blue"/><!--textsize: 24sp-->
        <!--color for testing-->

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#37AD00"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:textSize="22sp" /><!--textsize: 24sp-->

        <TextView
            android:id="@+id/fundName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="6dp"
            android:layout_below="@id/subject"
            android:textSize="16sp" /><!--textsize: 18sp-->

        <!-- The Date -->

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/detail"
            android:layout_alignEnd="@+id/detail"
            android:layout_below="@+id/detail"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:textColor="#303030"
            android:textSize="16sp" /><!--textsize: 18sp-->

    </RelativeLayout>