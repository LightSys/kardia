<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/noise_blue_repeat" >

    <Button
        android:id="@+id/pdfButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:text="@string/view_pdf_receipt"
        android:textStyle="bold"
        style="@style/customBottomBar"
        android:layout_below="@+id/checknum"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/giftamount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/giftamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fund"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="22sp"
        android:textColor="#37AD00" />

    <TextView
        android:id="@+id/checknum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:textSize="26sp"
        android:gravity="center"/>

    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </RelativeLayout>

</RelativeLayout>
