<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/noise_blue_repeat" >

    <RelativeLayout
        android:id="@+id/donor_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >
        <ImageView
            android:contentDescription="@string/profile_pic_description"
            android:id="@+id/profile_pic_image"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/prayer_letter_icon"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:textSize="22sp"
            android:layout_toRightOf="@id/profile_pic_image"
            android:layout_toEndOf="@id/profile_pic_image"
            android:layout_alignTop="@id/profile_pic_image"/>

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_below="@+id/name_text"
            android:textSize="14sp"
            android:layout_alignLeft="@id/name_text"
            android:layout_alignStart="@id/name_text"/>

        <TextView
            android:id="@+id/phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_below="@+id/email_text"
            android:textSize="14sp"
            android:layout_alignLeft="@id/name_text"
            android:layout_alignStart="@id/name_text" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000030"
        android:layout_below="@id/donor_info_layout" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fund_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/gift_amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textColor="#37AD00" />

    <TextView
        android:id="@+id/check_num_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gift_amount_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fund_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/donor_info_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:textSize="26sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/pdf_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/view_pdf_receipt"
        style="@style/customBottomBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
