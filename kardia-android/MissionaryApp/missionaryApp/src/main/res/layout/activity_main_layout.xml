<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context= "org.lightsys.missionaryapp.views.MainActivity">

    <!-- Display List -->
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/addUpdateButton"
        android:background="@drawable/noise_blue_repeat" >

        <ListView
            android:id="@+id/infoList"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            style="@style/listCustomBlue"/>
        
    </RelativeLayout>

    <!-- add Update Button -->
    <Button
        android:id="@+id/addUpdateButton"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        style="@style/customBottomBar"
        android:textSize="@dimen/large_header_dimen"
        android:textStyle="bold"
        android:text="@string/add_note_button"
        android:visibility="gone"/>

</RelativeLayout>