<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.donorapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/kardiabeat_v2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.lightsys.donorapp.views.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.lightsys.donorapp.views.AccountsActivity"
            android:label="@string/accounts_page"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="org.lightsys.donorapp.views.EditAccountActivity"
            android:label="Edit Account" >
        </activity>
        <activity
            android:name="org.lightsys.donorapp.views.PrayerNotificationActivity"
            android:label="Prayer Notification" >
        </activity>
        <activity android:name="org.lightsys.donorapp.views.ContactMissionaryActivity" >
        </activity>
        <activity
            android:name="org.lightsys.donorapp.views.CommentActivity"
            android:label="Post Comment" >
        </activity>

        <receiver android:name="org.lightsys.donorapp.tools.NotifyAlarmReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name="org.lightsys.donorapp.tools.AutoUpdater"
            android:enabled="true"
            android:exported="false" />

        <activity android:name="org.lightsys.donorapp.views.RefreshOptions" >
        </activity>
    </application>

</manifest>