<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/missionaryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/prayingButton"
        android:layout_toStartOf="@+id/prayingButton"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/missionaryName"
        android:layout_toLeftOf="@+id/prayingButton"
        android:layout_toStartOf="@id/prayingButton"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:singleLine="true"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/subject"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="12dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textAbovePrayingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="6dp"
        android:paddingRight="10dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textBelowPrayingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prayingButton"
        android:layout_marginTop="14dp"
        android:layout_alignLeft="@id/prayingButton"
        android:layout_alignStart="@id/prayingButton"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/prayingButton"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_margin = "10dp"
        android:clickable="false"
        android:focusable = "false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>
