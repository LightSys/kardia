<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/LinearLayout1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/noise_blue_repeat" xmlns:tools="http://schemas.android.com/tools">

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ToggleButton
            android:id="@+id/toggleDate"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="By Date"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

    </TableRow>

    <CheckBox
        android:id="@+id/dateRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/date_range" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/datepick1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/choose_date" />

        <TextView
            android:id="@+id/dash1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_" />

        <Button
            android:id="@+id/datepick2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/choose_date" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp" >

        <ToggleButton
            android:id="@+id/toggleAmount"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:text="ToggleButton"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/by_amount"
            android:textSize="22sp" />

    </TableRow>

    <CheckBox
        android:id="@+id/amountRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/amount_range" />

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/amount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:enabled="false"
            android:hint="00"
            android:inputType="number|numberDecimal"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/dash2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_" />

        <EditText
            android:id="@+id/amount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:enabled="false"
            android:hint="00"
            android:inputType="numberDecimal"
            tools:ignore="HardcodedText" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp" >

        <ToggleButton
            android:id="@+id/toggleCheck"
            android:layout_width="60dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/by_check_number"
            android:textSize="22sp" />

    </TableRow>

    <EditText
        android:id="@+id/checknum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:enabled="false"
        android:hint="123456"
        android:inputType="number"
        tools:ignore="HardcodedText" />

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/searchbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/search"
            style="@style/customBottomBar" />

    </TableRow>

</LinearLayout>
