	batch_qy "report/query"
	{
		sql = runserver("
		
			SELECT
				:c:a_check_number,
				:c:a_disbursement_id,
				cnt = count(1)
			FROM
				/apps/kardia/data/Kardia_DB/a_subtrx_cashdisb/rows c
			WHERE
				:c:a_ledger_number = :this:ledger and
				:c:a_batch_number  = :this:batch_number
			GROUP BY
				:c:a_check_number
				
		");
		//
		//	GROUP BY 
		//		:c:a_check_number
		
		// GROUP BY
		//		:c:a_disbursement_id	
	}
	
