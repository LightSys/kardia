$Version=2$
plugin_gsearch_fund "widget/component-decl"
    {
    icon = "/apps/kardia/images/icons/openiconic-dollar.svg";
    type = "FUND";
    width = 904;
    height = 24;
    sql = " -- Search based on fund
	    insert
		collection global_search
		--/apps/kardia/data/Kardia_DB/s_global_search/rows
	    select
		s_type = 'FUND',
		s_key = :a_cost_center,
		s_label = 'Fund: ' + :a_cost_center + ' ' + :a_cc_desc,
		s_desc = :a_cost_center + ' - ' + :a_cc_desc,
		s_score = 100.0,
		:a_ledger_number,
		s_cri1 = condition(
				(char_length(:info:cri1) > 1 and charindex(:info:cri1, condition(:info:lower1 > 0, lower(:a_cc_desc), :a_cc_desc)) > 0) or
				(char_length(:info:cri1) > 1 and :info:cri1 = condition(:info:lower1 > 0, lower(:a_cost_center), :a_cost_center)), 1, 0),
		s_cri2 = condition(
				(char_length(:info:cri2) > 1 and charindex(:info:cri2, condition(:info:lower2 > 0, lower(:a_cc_desc), :a_cc_desc)) > 0) or
				(char_length(:info:cri2) > 1 and :info:cri2 = condition(:info:lower2 > 0, lower(:a_cost_center), :a_cost_center)), 1, 0),
		s_cri3 = condition(
				(char_length(:info:cri3) > 1 and charindex(:info:cri3, condition(:info:lower3 > 0, lower(:a_cc_desc), :a_cc_desc)) > 0) or
				(char_length(:info:cri3) > 1 and :info:cri3 = condition(:info:lower3 > 0, lower(:a_cost_center), :a_cost_center)), 1, 0),
		s_cri4 = condition(
				(char_length(:info:cri4) > 1 and charindex(:info:cri4, condition(:info:lower4 > 0, lower(:a_cc_desc), :a_cc_desc)) > 0) or
				(char_length(:info:cri4) > 1 and :info:cri4 = condition(:info:lower4 > 0, lower(:a_cost_center), :a_cost_center)), 1, 0),
		s_cri5 = condition(
				(char_length(:info:cri5) > 1 and charindex(:info:cri5, condition(:info:lower5 > 0, lower(:a_cc_desc), :a_cc_desc)) > 0) or
				(char_length(:info:cri5) > 1 and :info:cri5 = condition(:info:lower5 > 0, lower(:a_cost_center), :a_cost_center)), 1, 0)
	    from
		/apps/kardia/data/Kardia_DB/a_cost_center/rows
	    where
		charindex(lower(nullif(:info:cri1, '')), lower(:a_cc_desc)) > 0 or
		lower(nullif(:info:cri1, '')) = lower(:a_cost_center) or
		charindex(lower(nullif(:info:cri2, '')), lower(:a_cc_desc)) > 0 or
		lower(nullif(:info:cri2, '')) = lower(:a_cost_center) or
		charindex(lower(nullif(:info:cri3, '')), lower(:a_cc_desc)) > 0 or
		lower(nullif(:info:cri3, '')) = lower(:a_cost_center) or
		charindex(lower(nullif(:info:cri4, '')), lower(:a_cc_desc)) > 0 or
		lower(nullif(:info:cri4, '')) = lower(:a_cost_center) or
		charindex(lower(nullif(:info:cri5, '')), lower(:a_cc_desc)) > 0 or
		lower(nullif(:info:cri5, '')) = lower(:a_cost_center)
	    having
		:s_cri1 + :s_cri2 + :s_cri3 + :s_cri4 + :s_cri5 > 0 and
		has_endorsement('kardia:gl', 'kardia:ledger:' + :a_ledger_number)
	    limit
		100
	    ";

    search_osrc "widget/parameter" { type=object; find_container="widget/osrc"; }

    ctls_hbox "widget/hbox"
	{
	x=0; y=0; width=904; height=24;
	align=center;
	spacing=10;

	view_partner "widget/textbutton"
	    {
	    width=130;
	    background="/apps/kardia/images/bg/lsblue_btngradient.png";
	    fgcolor1=white;
	    fgcolor2=black;
	    disable_color="#334466";
	    text="View Fund";

	    on_view "widget/connector"
		{
		event=Click;
		target=plugin_gsearch_fund;
		action=Launch;
		Multi = 1;
		Source = runclient("/apps/kardia/modules/gl/coamaint.app?ledger=" + :kardia_sysattrs_osrc:Ledger + "&period=" + :kardia_sysattrs_osrc:CurrentPeriod + "&year_period=" + :kardia_sysattrs_osrc:YearPeriod + "&fund=" + :search_osrc:s_key);
		//Width = runserver((select :width from object /apps/kardia/modules/base/partner_window.app));
		//Height = runserver((select :height from object /apps/kardia/modules/base/partner_window.app));
		Width=800;
		Height=600;
		}
	    }
	}
    }
