$Version=2$
plugin_rcpt_giftimport_EGS "widget/component-decl"
    {
    // In the future this will be an actual visual config tool,
    // but for now we just use it to supply the infrastructure.
    description = "Vanco Payments Electronic Giving via XML / POST API";
    tag = "VP";
    sql = "		i_eg_service = 'VP',
			i_eg_processor = 'Vanco Payments',
			i_eg_gift_currency = 'USD',
			i_eg_receipt_desired = null,
			i_eg_anonymous = null,
			i_eg_prayforme = null,
			i_eg_acctmap_future = 1,
			i_eg_fundmap_future = 1,
			i_eg_donormap_future = 1,
			s_date_created = getdate(),
			s_created_by = user_name(),
			s_date_modified = getdate(),
			s_modified_by = user_name(),

			:c:i_eg_gift_uuid,
			:c:i_eg_desig_uuid,
			:c:i_eg_trx_uuid,
			:c:i_eg_donor_uuid,
			:c:i_eg_donor_alt_id,
			:c:i_eg_account_uuid,

			:c:i_eg_status,
			:c:i_eg_returned_status,

			:c:i_eg_donor_name,
			:c:i_eg_donor_given_name,
			:c:i_eg_donor_surname,
			:c:i_eg_donor_middle_name,
			i_eg_donor_prefix = NULL,
			i_eg_donor_suffix = NULL,
			:c:i_eg_donor_address,
			:c:i_eg_donor_addr1,
			:c:i_eg_donor_addr2,
			i_eg_donor_addr3 = NULL,
			:c:i_eg_donor_city,
			:c:i_eg_donor_state,
			:c:i_eg_donor_postal,
			:c:i_eg_donor_country,
			:c:i_eg_donor_phone,
			:c:i_eg_donor_email,

			:c:i_eg_gift_amount,
			:c:i_eg_net_amount,
			:c:i_eg_deposit_gross_amt,
			:c:i_eg_deposit_amt,
			:c:i_eg_deposit_date,
			:c:i_eg_deposit_status,
			:c:i_eg_deposit_uuid,
			:c:i_eg_gift_pmt_type,
			:c:i_eg_gift_interval,
			:c:i_eg_gift_start_date,
			:c:i_eg_gift_end_date,
			:c:i_eg_gift_date,
			:c:i_eg_gift_trx_date,
			:c:i_eg_gift_settlement_date,
			:c:i_eg_gift_lastfour,
			:c:i_eg_desig_name,
			:c:i_eg_desig_notes
			
		from
			/apps/kardia/modules/eg_vanco/combined.qy c
		";

    upsert_sql="on duplicate
			:a_ledger_number, :i_eg_trx_uuid, :i_eg_desig_uuid
		update set
			:i_eg_deposit_date = :c:i_eg_deposit_date,
			:i_eg_deposit_uuid = :c:i_eg_deposit_uuid,
			:i_eg_deposit_gross_amt = :c:i_eg_deposit_gross_amt,
			:i_eg_deposit_amt = :c:i_eg_deposit_amt,
			:i_eg_net_amount = :c:i_eg_net_amount,
			:i_eg_desig_notes = :c:i_eg_desig_notes,
			:i_eg_status = :c:i_eg_status,
			:i_eg_returned_status = :c:i_eg_returned_status,
			:i_eg_gift_settlement_date = :c:i_eg_gift_settlement_date,
			:s_date_modified = getdate() IF MODIFIED,
			:s_modified_by = user_name() IF MODIFIED
		";

    postprocess_sql="
		print 'Done!'
		";
			
    }
