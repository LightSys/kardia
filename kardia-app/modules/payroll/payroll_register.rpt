		    }

		payroll_list_sum "report/table-row"
		    {
		    font=courier;
		    topborder = 0.01;
		    summary=yes;
		    margintop=0.1;
		    marginbottom=0.0;
		    allowbreak = no;

		    ps_name "report/table-cell" { value=runserver('TOTALS:'); style=bold; font=helvetica; align=right; }
