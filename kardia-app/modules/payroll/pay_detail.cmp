	period_sync_pp "widget/rule"
	    {
	    ruletype = "osrc_relationship";
	    target = periods_osrc;
	    is_slave = yes;
	    key_1 = a_payroll_period;
	    target_key_1 = a_payroll_period;
	    key_2 = a_ledger_number;
