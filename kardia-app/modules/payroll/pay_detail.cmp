	    condition=runserver(:this:by_item_type == 0);
	    ruletype = "osrc_relationship";
	    target = payee_osrc;
	    is_slave = yes;
	    key_1 = a_ledger_number;
	    target_key_1 = a_ledger_number;
	    key_2 = a_payroll_id;
